<h4 class='text-info'>Assistenze</h4>
<br>
<div class='panel panel-info'>
  <div class='panel-body'>
    <div class='nested-fields'>
      <div class='field'>
        <%= f.label :start_time, class: 'text-info font-lite' %>
        <%= f.time_select :start_time, class: 'btn btn-primary btn-sm'%>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= f.label :end_time, class: 'text-info font-lite' %>
        <%= f.time_select :end_time, class: 'btn btn-primary btn-sm'%>
      </div>
      <br>
      <div class='field'>
        <%= f.label :description, class: 'text-info font-lite' %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label :note, class: 'text-info font-lite' %>
        <%= f.text_area :note, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label :category_id, class: 'text-info font-lite' %>
        <%= f.collection_select(:category_id, Category.where(user_id: current_user.id).order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label :office_id, class: 'text-info font-lite' %>
        <%= f.collection_select(:office_id, Office.where(user_id: current_user.id).order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <br>
      <span class='pull-right'>
        <%= link_to_remove_association f do %>
        <span class='text-danger'>
          <i class='fas fa-trash-alt'></i>&nbsp;&nbsp;Elimina Assistenza
        </span>
      <% end %>
    </span>
    <br>
  </div>
</div>
</div>
