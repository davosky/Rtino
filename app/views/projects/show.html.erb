<h3>
  <%= inline_svg('project_icon.svg', size: '32px * 32px', preserve_aspect_ratio: 'xMaxYMax meet') %>
  &nbsp;<span class='text-primary'><%= @project.name %></span>
  <span class='pull-right'>
    <h6>
      <% if completed?(@project) %>
        <%= link_to completed_projects_path, title: 'Back to the List', rel: 'tooltip' do %>
          <span class='link-return'><i class='fas fa-arrow-left'></i></span>&nbsp;&nbsp;Ritorna alla Lista
        <% end %>
      <% else %>
        <%= link_to projects_path, title: 'Back to the List', rel: 'tooltip' do %>
          <span class='link-return'><i class='fas fa-arrow-left'></i></span>&nbsp;&nbsp;Ritorna alla Lista
        <% end %>
      <% end %>
      &nbsp;|&nbsp;
      <%= link_to edit_project_path(@project), title: 'Edit the current Location', rel: 'tooltip' do %>
        <span class='text-warning'><i class='fas fa-pencil-alt'></i></span>&nbsp;&nbsp;Modifica
      <% end %>
      &nbsp;|&nbsp;
      <%= link_to @project, method: :delete, data: { confirm: 'Sei sicura/o di voler eliminare il Rapporto corrente?' }, title: 'Delete the current Location', rel: 'tooltip' do %>
        <span class='text-danger'><i class='fas fa-trash-alt'></i></span>&nbsp;&nbsp;Elimina
      <% end %>
    </h6>
  </span>
</h3>
<hr class='hr-primary'>
<br>
<div class='panel panel-primary'>
  <div class='panel-body'>
    <div>
      <span class="pull-left">
        <span class='text-primary'><i class='far fa-calendar-alt'></i>&nbsp;&nbsp;Data Inizio: </span><%= start_date?(@project) %>
        &nbsp;&nbsp;
        <span class='text-primary'><i class='far fa-calendar-alt'></i>&nbsp;&nbsp;Data Fine: </span><%= end_date?(@project) %>
      </span>
      <span class="pull-right">
        <span class='text-primary'><i class='fas fa-map-marker-alt'></i>&nbsp;&nbsp;Posizione: </span><%= location?(@project) %>
        &nbsp;&nbsp;
        <span class='text-primary'><i class='far fa-building'></i>&nbsp;&nbsp;Struttura: </span><%= structure?(@project) %>
        &nbsp;&nbsp;
        <span class='text-primary'><i class='fas fa-chair'></i>&nbsp;&nbsp;Struttura: </span><%= office?(@project) %>
      </span>
      <br>
      <span class="pull-left">
        <span class='text-primary'><i class='fas fa-clipboard-list'></i>&nbsp;&nbsp;Tipologia Progetto:: </span><%= project_typology?(@project) %>
        &nbsp;&nbsp;
        <span class='text-primary'><i class="fas fa-list-ol"></i>&nbsp;&nbsp;Priorit&agrave; Progetto: </span><%= @project.project_priority %>
      </span>
      <span class="pull-right">
        <span class='text-primary'><i class="fas fa-signal"></i>&nbsp;&nbsp;Stato Progetto: </span><%= project_status?(@project) %>
        &nbsp;&nbsp;
      </span>
    </div>
  </div>
</div>
<br>
<h4>
  <span class='text-info'>
    <i class='fas fa-wrench'></i>&nbsp;Task
  </span>
</h4>
<% @project.tasks.each  do |task| %>
  <div class='panel panel-info'>
    <div class='panel-body'>
      <h4 class='text-info'><%= task.name %></h4>
      <br>
      <span class='text-info'><i class='far fa-calendar-alt'></i>&nbsp;&nbsp;Data Inizio:</span>&nbsp;<%= l(task.start_date, format: '%A %d %B %Y') %>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <span class='text-info'><i class='far fa-calendar-alt'></i>&nbsp;&nbsp;Data Fine:</span>&nbsp;<%= l(task.end_date, format: '%A %d %B %Y') if task.end_date != nil %>
      <br><br>
      <span class='text-info'><i class="far fa-file-alt"></i>&nbsp;&nbsp;Descrizione:</span>
      <br>
      <%= task.description %>
      <br>
      <br>
    </div>
  </div>
<% end %>
