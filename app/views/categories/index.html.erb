<h3>
  <%= inline_svg('category_icon.svg', size: '32px * 32px', preserve_aspect_ratio: 'xMaxYMax meet') %>
  &nbsp;<span class='text-primary'>Categorie</span>
  <span class='pull-right'>
    <h6>
      <% if admin? %>
        <%= link_to new_category_path do %>
          <%= inline_svg('category_icon.svg', size: '18px * 18px', preserve_aspect_ratio: 'xMaxYMax meet') %>
          Nuova Categoria
        <% end %>
      <% end %>
    </h6>
  </span>
</h3>
<hr class='hr-primary'>
<br>
<div class='panel panel-default'>
  <div class='panel-body'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Posizione</td>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td class='text-primary'><%= category.name %></td>
            <td class='text-primary'><%= category.position %></td>
            <td>
              <%= link_to edit_category_path(category), title: 'Modifica la Categoria Corrente', rel: 'tooltip' do %>
                <i class='fas fa-pencil-alt text-warning'></i>
              <% end %>
            </td>
            <td>
              <%= link_to category, method: :delete, data: { confirm: 'Sei sicura/o di voler eliminare la Categoria Corrente?' }, title: 'Elimina la Categoria Corrente', rel: 'tooltip' do %>
                <i class='fas fa-trash-alt text-danger'></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <span class='text-centered'>
      <%= will_paginate @categories, previous_label: 'Precedente', next_label: 'Prossima', renderer: BootstrapPagination::Rails %>
    </span>
  </div>
</div>
