<h3>
  <%= inline_svg('structure_icon.svg', size: '32px * 32px', preserve_aspect_ratio: 'xMaxYMax meet') %>
  &nbsp;<strong class="text-primary">Structures</strong>
  <span class='pull-right'>
    <h6>
      <% if admin? %>
        <%= link_to new_structure_path do %>
          <%= inline_svg('structure_icon.svg', size: '18px * 18px', preserve_aspect_ratio: 'xMaxYMax meet') %>
          New Structure
        <% end %>
      <% end %>
    </h6>
  </span>
</h3>
<hr class="hr-primary">
<br>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Name</td>
          <td>Position</td>
        </tr>
      </thead>
      <tbody>
        <% @structures.each do |structure| %>
          <tr>
            <td class="text-primary"><%= structure.name %></td>
            <td class="text-primary"><%= structure.position %></td>
            <td>
              <%= link_to edit_structure_path(structure), title: 'Edit the current structure', rel: 'tooltip' do %>
                <i class="fas fa-pencil-alt text-warning"></i>
              <% end %>
            </td>
            <td>
              <%= link_to structure, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete the current structure', rel: 'tooltip' do %>
                <i class="fas fa-trash-alt text-danger"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <span class="text-centered">
      <%= will_paginate @structures, renderer: BootstrapPagination::Rails %>
    </span>
  </div>
</div>
