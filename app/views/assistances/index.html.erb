<p id="notice"><%= notice %></p>

<h1>Assistances</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Report</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Description</th>
      <th>Note</th>
      <th>Category</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assistances.each do |assistance| %>
      <tr>
        <td><%= assistance.name %></td>
        <td><%= assistance.report %></td>
        <td><%= assistance.start_time %></td>
        <td><%= assistance.end_time %></td>
        <td><%= assistance.description %></td>
        <td><%= assistance.note %></td>
        <td><%= assistance.category %></td>
        <td><%= assistance.office %></td>
        <td><%= link_to 'Show', assistance %></td>
        <td><%= link_to 'Edit', edit_assistance_path(assistance) %></td>
        <td><%= link_to 'Destroy', assistance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

